{   
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ESNext",
        "resolveJsonModule": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strict": true,
        "newLine": "lf",
        "outDir": "./"
    },
    "exclude": ["node_modules"]
}
